@{
    ViewData["Title"] = "Home Page";
}

@model Dictionary<string, SCPFoundation.Models.SCPItem>;


<div class="text-center text-white d-flex flex-column align-items-center">
    <h1 class="display-2 jb-mono fw-bolder">ITEM ARCHIVE</h1>
    <div id="restricted-access" class="fs-5 mb-2">
        <hr class="text-danger">
        <div class="text-danger jb-mono mb-3"><span style="letter-spacing: 6px;">RESTRICTED ACCESS</span></div>
    </div>
    <div class="text-grey jb-mono fs-6" style="width: 600px">AUTHORIZED CLEARANCE LEVEL 4+ REQUIRED FOR DETAILED
        DOSSIER
        ACCESS.
        DISSEMINATION OF
        CONTAINMENT DATA TO
        UNAUTHORIZED PERSONNEL IS GROUNDS FOR IMMEDIATE TERMINATION</div>

    <div id="filter-container" class="mt-5 px-5 py-4 d-flex align-items-center gap-5 text-start jb-mono text-grey">
        <div>
            <div class="fw-bold fs-5 mb-2">FILTER PROTOCOL</div>
            <div class="d-flex fs-6 gap-2">
                <div class="protocol-card d-flex align-items-center">
                    CACHE_LOAD: 100%
                </div>
                <div class="text-success protocol-card d-flex align-items-center">
                    CONNECTION: STABLE
                </div>
                <div class="protocol-card d-flex align-items-center">
                    @Model.Count FILES LOADED
                </div>

            </div>
        </div>

        <div class="flex-shrink-1 flex-grow-1">
            <div class="fw-bold mb-2">QUERY ID/DESIGNATION</div>
            <input id="scp-search" placeholder="INPUT DATA..." type="search" class="text-uppercase fs-6"
                style="width: 100%;">
        </div>
        <div class="flex-shrink-1 flex-grow-1">
            <div class="fw-bold mb-2">CLASSIFICATION</div>
            <select id="scp-select" class="fs-6" style="width: 100%;">
                <option value="ALL">ALL CLASSIFICATIONS</option>
                <option>SAFE</option>
                <option>EUCLID</option>
                <option>KETER</option>
            </select>
        </div>
    </div>

    <div class="container mt-3 text-start">
        <div class="row gx-4 gy-4">
            @{
                string placeholder = Url.Content("~/assets/placeholder.jpg");
            }


            @foreach (var scp in Model.Values)
            {
                if (scp == null)
                {
                    continue;
                }

                <div class="scp-card col-12 col-sm-6 col-lg-3">
                    <div class="card index-card h-100 pb-3">
                        <img class="card-img-top" src="@(scp.Image ?? placeholder)" alt="@(scp.Caption ?? scp.Title)">
                        <div class="file-num px-2 py-1 jb-mono fs-6 fw-bold">
                            FILE_@scp.Id.Replace("SCP-", "")
                        </div>

                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                <hr class="text-danger line-before me-2" style="width:20px;">
                                <h5 class="scp-id fs-5 text-danger jb-mono" style="margin: 0;">@scp.Id</h5>
                            </div>
                            <p class="scp-title fs-4 fw-bolder">@scp.Title</p>

                            <hr class="text-grey" style="margin: 0 auto 20px;">

                            <div class="d-flex align-items-center justify-content-between">
                                <div class="scp-class inter fw-bolder px-3 py-1 text-uppercase @scp.Class">
                                    @scp.Class
                                </div>
                                <div class="text-grey access">ACCESS →</div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<script src="~/js/search.js"></script>
<script src="~/js/cards.js"></script>
